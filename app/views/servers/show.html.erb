<%- model_class = Server -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:server_name) %>:</strong></dt>
  <dd><%= @server.server_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:vendor) %>:</strong></dt>
  <dd><%= @server.vendor %></dd>
  <dt><strong><%= model_class.human_attribute_name(:processor) %>:</strong></dt>
  <dd><%= @server.processor %></dd>
  <dt><strong><%= model_class.human_attribute_name(:memory) %>:</strong></dt>
  <dd><%= @server.memory %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              servers_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_server_path(@server), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              server_path(@server),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
