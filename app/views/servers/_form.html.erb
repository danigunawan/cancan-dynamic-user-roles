<%= form_for @server, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :server_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :server_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :vendor, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :vendor, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :processor, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :processor, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :memory, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :memory, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                servers_path, :class => 'btn' %>
  </div>
<% end %>
